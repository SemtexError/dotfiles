{
    // Yank
    "yank.enableCompletion": false,

    // Latex
    "latex.build.executable": "xelatex",

    // Typescript
    "tsserver.npm": "/usr/bin/npm",

    // Vetur
    "vetur.format.options.tabSize": 4,

    // Tail wind
    "tailwindCSS.jsLanguages": [
        "javascript",
        "typescript"
    ],
    "tailwindCSS.cssLanguages": [
        "css",
        "postcss",
        "sass",
        "scss",
        "vue"
    ],


    // Explorer
    "explorer.toggle": true,
    "explorer.position": "right",
    "explorer.previewAction.onHover": false,
    "explorer.icon.enableNerdfont": true,
    "explorer.file.column.indent.chars": "    ",
    "explorer.openAction.changeDirectory": false,
    "explorer.sources": [
        {
            "name": "buffer",
            "expand": false
        },
        {
            "name": "file",
            "expand": true
        }
    ],
    "explorer.file.hiddenRules": {
        "extensions": [

        ],
        "filenames": [

        ],
        "patternMatches": [
            "^\\.", // Dot files
            "^bin$", // C#
            "^obj$", // C#
            "^dist$", // Javascript
            "^node_modules$", // NPM
        ]
    },
    "explorer.icon.customIcons": {
      "icons": {
        "csharp": {
          "code": "",
          "color": "#009404"
        },
        "npm": {
          "code": "ﯵ",
          "color": "#cb3837"
        },
        "log": {
          "code": "",
          "color": "#3498db"
        },
        "latex": {
          "code": "ﭔ",
          "color": "#3498db"
        },
        "bibliography": {
          "code": "",
          "color": "#27ae60"
        }
      },
      "extensions": {
        "cs": "csharp",
        "log": "log",
        "tex": "latex",
        "bib": "bibliography",
        "sty": "bibliography",
        "csproj": "vs"
      },
      "filenames": {
        "vue.config.js": "webpack",
        "package.json": "npm",
        "package-lock.json": "npm",
        "yarn.lock": "npm"
      },
      "patternMatches": {
        ".*postcss.*.js$": "mootools"
      }
    }
}
