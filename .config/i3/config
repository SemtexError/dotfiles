# SemtexError: I3WM config

# https://github.com/i3/i3/issues/3518
focus_follows_mouse no

font monaco:monospace 16

set $mod Mod4
set $gap 5
set $nsi --no-startup-id

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

set $mon1 "DP-2.8"
set $mon2 "DP-0"
set $mon3 "DP-4.8"

# Set the workspace order on startup
workspace $ws1 output $mon1
workspace $ws2 output $mon2
workspace $ws3 output $mon3

# workspace $ws4 output $mon1
