# SemtexError: I3WM config

font monaco:monospace 16

set $mod Mod4
set $gap 5
set $nsi --no-startup-id

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

set $bg-color			#36445e
set $bg-color-focus		#697791

#code			border		background	text	indicator		child_border
client.focused	$bg-color	#285577		#ffffff	$bg-color-focus	#285577

smart_gaps on
# smart_borders on
gaps inner $gap
gaps outer 0

for_window [class="^.*"] border pixel 4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod 

# PrintScreen
bindsym --release Print				exec $nsi spectacle
bindsym $mod+Print 					exec echo ''
bindsym $mod+Shift+Print 			exec echo ''
bindsym $mod+Ctrl+Print 			exec echo ''
bindsym $mod+Ctrl+Shift+Print		exec echo ''

# Backspace
bindsym $mod+BackSpace 				gaps inner current set $gap
bindsym $mod+Shift+BackSpace 		gaps outer current set 0
bindsym $mod+Ctrl+BackSpace 		exec echo ''
bindsym $mod+Ctrl+Shift+BackSpace	exec echo ''

# Enter
bindsym $mod+Return 				exec i3-sensible-terminal
bindsym $mod+Shift+Return 			exec echo ''
bindsym $mod+Ctrl+Return 			exec echo ''
bindsym $mod+Ctrl+Shift+Return		exec echo ''

# Comma/,
bindsym $mod+comma 					exec echo ''
bindsym $mod+Shift+comma 			exec echo ''
bindsym $mod+Ctrl+comma 			exec echo ''
bindsym $mod+Ctrl+Shift+comma		exec echo ''

# Plus
bindsym $mod+plus 					gaps inner current plus 5
bindsym $mod+Shift+plus 			gaps outer current plus 5
bindsym $mod+Ctrl+plus 				exec echo ''
bindsym $mod+Ctrl+Shift+plus		exec echo ''

# Minus
bindsym $mod+minus 					gaps inner current minus 5
bindsym $mod+Shift+minus 			gaps outer current minus 5
bindsym $mod+Ctrl+minus 			exec echo ''
bindsym $mod+Ctrl+Shift+minus		exec echo ''

# space
bindsym $mod+space 					focus mode_toggle
bindsym $mod+Shift+space 			floating toggle
bindsym $mod+Ctrl+space 			exec echo ''
bindsym $mod+Ctrl+Shift+space 		exec echo ''

# ;
bindsym $mod+semicolon 				focus right
bindsym $mod+Shift+semicolon 		exec echo ''
bindsym $mod+Ctrl+semicolon 		exec echo ''
bindsym $mod+Ctrl+Shift+semicolon 	exec echo ''

# Left
bindsym $mod+Left 					focus left
bindsym $mod+Shift+Left 			move left
bindsym $mod+Ctrl+Left 				resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+Shift+Left 		exec echo ''

# Right
bindsym $mod+Right 					focus right
bindsym $mod+Shift+Right			move right
bindsym $mod+Ctrl+Right 			resize grow width 10 px or 10 ppt
bindsym $mod+Ctrl+Shift+Right 		exec echo ''

# Up
bindsym $mod+Up 					focus up
bindsym $mod+Shift+Up 				move up
bindsym $mod+Ctrl+Up 				resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+Shift+Up 			exec echo ''

# Down
bindsym $mod+Down 					focus down
bindsym $mod+Shift+Down 			move down
bindsym $mod+Ctrl+Down 				resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+Shift+Down 		exec echo ''

# A
bindsym $mod+a 						focus parent
bindsym $mod+Shift+a 				exec echo ''
bindsym $mod+Ctrl+a 				exec echo ''
bindsym $mod+Ctrl+Shift+a 			exec echo ''

# B
bindsym $mod+b 						exec $nsi firefox
bindsym $mod+Shift+b 				exec echo ''
bindsym $mod+Ctrl+b 				exec echo ''
bindsym $mod+Ctrl+Shift+b 			exec echo ''

