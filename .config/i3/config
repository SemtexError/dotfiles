# Media keys
bindsym XF86MonBrightnessUp 		exec xbacklight -inc 10
bindsym XF86MonBrightnessDown 		exec xbacklight -dec 10

bindsym XF86AudioRaiseVolume 		exec $nsi pactl set-sink-volume 1 +5%
bindsym XF86AudioLowerVolume 		exec $nsi pactl set-sink-volume 1 -5%
bindsym XF86AudioMute 				exec $nsi pactl set-sink-mute 1 toggle
bindsym XF86AudioPause 				exec $nsi playerctl play-pause
bindsym XF86AudioNext 				exec $nsi playerctl next
bindsym XF86AudioPrev 				exec $nsi playerctl previous

