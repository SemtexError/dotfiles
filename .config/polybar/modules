[module/time]
    type = internal/date

    interval = 5

    time = "%H:%M"
    label = %time%

    format-prefix = " "
    format-background = ${colors.highlight-background}

; Only on desktop
[module/wired-network]
    type = internal/network
    interface = eno1
	double-click-left = nm-connection-editor &
	format-connected = 
    label-connected = 
	format-disconnected =  

; Only on laptop
[module/wireless-network]
    type = internal/network
    interface = wlp2s0
	double-click-left = nm-connection-editor
	label-connected = 
	format-connected = 
    label-connected = 
	format-disconnected = 
	label-disconnected = 

[module/powermenu]
    type = custom/menu

    label-open = 
    label-close =  cancel

; menu 1: select
    menu-0-0 =  reboot
    menu-0-0-exec = menu-open-1
    menu-0-0-padding = 3

    menu-0-1 =  power off
    menu-0-1-exec = menu-open-2
    menu-0-1-padding = 3

    menu-0-2 =  log out
    menu-0-2-exec = menu-open-3
    menu-0-2-padding = 3

; Menu 2: reboot
    menu-1-0 = reboot?  
    menu-1-0-exec = reboot
    menu-1-0-padding = 3

; Menu 3: power off
    menu-2-0 = power off?  
    menu-2-0-exec = shutdown now
    menu-2-0-padding = 3

; Menu 4: log out
    menu-3-0 = log out?
    menu-3-0-exec = i3-msg exit
    menu-3-0-padding = 3

[module/date]
    type = internal/date
    interval = 5

    date = "%d-%m-%Y"
    label = %date%

    format-prefix = "ﷻ "

; Only on laptop
[module/volume2]
    type = custom/script
    exec = ~/.config/scripts/audio/get

    scroll-down = ~/.config/scripts/audio/audio --increase
    scroll-up = ~/.config/scripts/audio/audio --decrease
    interval = 1

[module/volume]
    type = internal/pulseaudio

; Mouse change interval
    interval = 1

    ramp-volume-0 = 
    ramp-volume-1 = 
    ramp-volume-2 = 
    ramp-volume-3 = 

    label-muted =  muted
    label-muted-foreground = ${colors.disabled-color}

    format-volume = <ramp-volume> <label-volume>

[module/spotify]
    type = custom/script

    ; Seconds between update
    interval = 10

    exec = ~/.config/scripts/spotify/spotify-artist

    format-prefix = " "

; Only on laptop
[module/battery]
    type = internal/battery

    full-at = 99

    battery = BAT1
    adapter = AC0
    poll-interval = 5

    format-charging = <animation-charging>  <label-charging>
    format-discharging = <ramp-capacity>  <label-discharging>
    format-full = <ramp-capacity>  <label-full>
    label-charging = %percentage%%
    label-discharging = %percentage%%
    label-full = %percentage%%
    format-charging-padding = 3
    format-discharging-padding = 3
    format-full-padding = 3

    ramp-capacity-0 = 
    ramp-capacity-1 = 
    ramp-capacity-2 = 
    ramp-capacity-3 = 
    ramp-capacity-4 = 

    animation-charging-0 = 
    animation-charging-1 = 
    animation-charging-2 = 
    animation-charging-3 = 
    animation-charging-4 = 

    animation-charging-framerate = 750

; Only on laptop
[module/brightness]
    type = custom/script
    exec = echo "$(light | cut -d. -f1)%"
    exec-if = ${env:SHOWSCREEN:true}

    scroll-up = light -A 1
    scroll-down = light -U 1
    interval = 1
    format-prefix = " "   


; ====================== Center
[module/vpn]
    type = custom/script
    interval = 5
    exec = ~/.config/scripts/vpn/vpn-status
	click-left = ~/.config/scripts/vpn/switch.sh &
    format-background = ${colors.highlight-background}

; ====================== Left
[module/bspwm]
    type = internal/bspwm

; Only show workspaces defined on the same output as the bar
    pin-workspaces = false

; Wrap around when reaching the first/last workspace
    wrapping-scroll = false

; Move it in the corner
    format-padding = 0

; Out of focus desktop
    label-dimmed-foreground = ${colors.disabled-color}

; Workspace with items
    label-occupied = %name%
    label-occupied-padding = ${settings.padding}

; Workspace without any items
    label-empty = 
    label-empty-padding = ${settings.padding}

; Workspace that is active/focused
    label-focused = %name%
    label-focused-background = ${colors.highlight-background}
    label-focused-padding = ${settings.padding}
     
; Workspace that is seeking attention
    label-urgent = %name%!
    label-urgent-foreground = ${colors.alert-color}
    label-urgent-background = ${colors.alert-background}
    label-urgent-padding = ${settings.padding}

; Seperator in between workspaces
    label-separator-foreground = ${colors.seperator-color}
    label-separator-padding = ${settings.padding}

[module/i3]
    type = internal/i3

; Only show workspaces defined on the same output as the bar
    pin-workspaces = true

; Wrap around when reaching the first/last workspace
    wrapping-scroll = false

; Move it in the corner
    format-padding = 0

    label-focused = %icon% %name%
    label-focused-background = ${colors.highlight-background}
    label-focused-padding = ${settings.padding}
     
    label-unfocused = %icon% %name%
    label-unfocused-padding = ${settings.padding}
     
    label-visible = %icon% %index%
    label-visible-underline = ${colors.visible-color}
    label-visible-padding = ${settings.padding}

    label-urgent = %icon% %name%
    label-urgent-foreground = ${colors.alert-color}
    label-urgent-background = ${colors.alert-background}
    label-urgent-padding = ${settings.padding}

    label-separator-foreground = ${colors.seperator-color}
    label-separator-padding = ${settings.padding}

; vim:ft=dosini
