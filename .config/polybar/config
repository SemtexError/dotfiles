; Modules to add: bluetooth, mounted devices

[colors]
    background = #AF000000
    format-color = #FFF
    disabled-color = #7F8C8D
    seperator-color = #FFB52A
    visible-color = #555555

    highlight-color = #FFF
    highlight-background = #CF000000

    alert-background = #E74C3c
    alert-color = #000000

[settings]
    padding = 3

    ; Format
    format-padding = ${settings.padding}
    format-foreground = ${colors.format-color}
    format-prefix-foreground = ${colors.format-color}

[bar/main]
    ; Modules
    modules-right = spotify screen battery volume powermenu wireless-network wired-network date time 
    modules-center = vpn
    modules-left = i3

    ; Monitor
    monitor=${env:MONITOR:}

    ; Position
    width = 100%
    height = 35
    offset-x = 0%
    offset-y = 0%

    ; Color
    background = ${colors.background}
    foreground = ${colors.format-color}

    ; Line
    line-size = 0
    line-color = #f00

    ; Border
    border-size = 0
    border-color = #00000000

    ; Padding
    padding-left = 0
    padding-right = 0

    ; Module margin
    module-margin-left = 0
    module-margin-right = 0

    ; Font
    font-0 = Noto Sans:pixelsize=13;0
    font-1 = FontAwesome:size=13;1

    ; Tray
    tray-position = right
    tray-padding = 3

    ; Scroll
    scroll-up = i3wm-wsnext
    scroll-down = i3wm-wsprev

[module/time]
    type = internal/date

    interval = 5

    time = "%H:%M"
    label = %time%

    format-prefix = " "
    format-background = ${colors.highlight-background}

; Only on desktop
[module/wired-network]
    type = internal/network
    interface = enp3s0
	double-click-left = nm-connection-editor
	format-connected = 
	format-disconnected =  

; Only on laptop
[module/wireless-network]
    type = internal/network
    interface = 
	double-click-left = nm-connection-editor
	format-connected = 
	format-disconnected =  

[module/powermenu]
    type = custom/menu

    label-open =   
    label-close =  cancel

    ; menu 1: select
    menu-0-0 =  reboot
    menu-0-0-exec = menu-open-1
    menu-0-0-padding = 3

    menu-0-1 =  power off
    menu-0-1-exec = menu-open-2
    menu-0-1-padding = 3

    menu-0-2 =  log out
    menu-0-2-exec = menu-open-3
    menu-0-2-padding = 3

    ; Menu 2: reboot
    menu-1-0 = reboot?  
    menu-1-0-exec = reboot
    menu-1-0-padding = 3

    ; Menu 3: power off
    menu-2-0 = power off?  
    menu-2-0-exec = shutdown now
    menu-2-0-padding = 3

    ; Menu 4: log out
    menu-3-0 = log out?
    menu-3-0-exec = i3-msg exit
    menu-3-0-padding = 3

[module/date]
    type = internal/date
    interval = 5

    date = "%d-%m-%Y"
    label = %date%

    format-prefix = " "

[module/volume]
    type = internal/pulseaudio

    ; Mouse change interval
    interval = 1

    ramp-volume-0 = 
    ramp-volume-1 = 
    ramp-volume-2 = 
    ramp-volume-3 = 

    label-muted =  muted
    label-muted-foreground = ${colors.disabled-color}

    format-volume = <ramp-volume> <label-volume>

[module/spotify]
    type = custom/script

    ; Seconds between update
    interval = 10

    exec = ~/.scripts/spotify/spotify-artist

    format-prefix = " "

; Only on laptop
[module/battery]
    type = internal/battery

    full-at = 99

    battery = BAT1
    adapter = AC0
    poll-interval = 5

    format-charging = <animation-charging>  <label-charging>
    format-discharging = <ramp-capacity>  <label-discharging>
    format-full = <ramp-capacity>  <label-full>
    label-charging = %percentage%%
    label-discharging = %percentage%%
    label-full = %percentage%%
    format-charging-padding = 3
    format-discharging-padding = 3
    format-full-padding = 3

    ramp-capacity-0 = 
    ramp-capacity-1 = 
    ramp-capacity-2 = 
    ramp-capacity-3 = 
    ramp-capacity-4 = 

    animation-charging-0 = 
    animation-charging-1 = 
    animation-charging-2 = 
    animation-charging-3 = 
    animation-charging-4 = 
    animation-charging-framerate = 750

; Only on laptop
[module/screen]
    type = custom/script
    exec = echo "$(light | cut -d. -f1)%"
    exec-if = ${env:SHOWSCREEN:true}

    scroll-up = light -A 5
    scroll-down = light -U 5
    interval = 1
    format-prefix = " "   

; Only on laptop
[module/backlight]
    type = internal/backlight

    card = intel_backlight
    enable-scroll = true

    format = <label>
    format-prefix = " "   
    label = %percentage%%


; ====================== Center
[module/vpn]
    type = custom/script
    exec = ~/.scripts/vpn/vpn-status
    interval = 5
    format-background = ${colors.highlight-background}
    format-margin = 3

; ====================== Left
[module/i3]
    type = internal/i3

    ; Only show workspaces defined on the same output as the bar
    pin-workspaces = true

    ; Wrap around when reaching the first/last workspace
    wrapping-scroll = false

    ; Move it in the corner
    format-padding = 0

    label-focused = %name%
    label-focused-background = ${colors.highlight-background}
    label-focused-padding = ${settings.padding}
     
    label-unfocused = %name%
    label-unfocused-padding = ${settings.padding}
     
    label-visible = %index%
    label-visible-underline = ${colors.visible-color}
    label-visible-padding = ${settings.padding}

    label-urgent = %name%
    label-urgent-foreground = ${colors.alert-color}
    label-urgent-background = ${colors.alert-background}
    label-urgent-padding = ${settings.padding}

    label-separator-foreground = ${colors.seperator-color}
    label-separator-padding = ${settings.padding}

; vim:ft=dosini
